# /var/lib/lxc/wheezy32/config

## Container
lxc.utsname                             = wheezy32
lxc.rootfs                              = /var/lib/lxc/wheezy32/rootfs
lxc.arch                                = x86
#lxc.console                            = /var/log/lxc/wheezy32.console
lxc.tty                                 = 4
lxc.pts                                 = 1024

## Network
lxc.network.type			= veth
lxc.network.flags			= up
lxc.network.link			= br0
lxc.network.hwaddr			= bc:5f:f4:6d:b0:ad #etho mac incremented

# /dev/null and zero
lxc.cgroup.devices.allow 		= c 1:3 rwm
lxc.cgroup.devices.allow 		= c 1:5 rwm
# # consoles
lxc.cgroup.devices.allow 		= c 5:1 rwm
lxc.cgroup.devices.allow 		= c 5:0 rwm
lxc.cgroup.devices.allow 		= c 4:0 rwm
lxc.cgroup.devices.allow 		= c 4:1 rwm
# # /dev/{,u}random
lxc.cgroup.devices.allow 		= c 1:9 rwm
lxc.cgroup.devices.allow 		= c 1:8 rwm
lxc.cgroup.devices.allow 		= c 136:* rwm
lxc.cgroup.devices.allow 		= c 5:2 rwm
# # rtc
lxc.cgroup.devices.allow 		= c 254:0 rwm


## Filesystem
lxc.mount.entry                         = proc /var/lib/lxc/wheezy32/rootfs/proc proc nodev,noexec,nosuid 0 0
lxc.mount.entry                         = sysfs /var/lib/lxc/wheezy32/rootfs/sys sysfs defaults,ro 0 0
